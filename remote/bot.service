[Unit]
Description=POE Herald Bot Service

After=postgresql.service
After=network-online.target
Wants=network-online.target

StartLimitIntervalSec=600
StartLimitBurst=5

[Service]
Type=exec
User=herald
Group=herald
EnvironmentFile=/etc/environment
WorkingDirectory=/home/herald
ExecStart=/home/herald/bot -port=4000 -env=production

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target